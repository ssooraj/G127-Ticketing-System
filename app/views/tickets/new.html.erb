<%= form_for @ticket , url: tickets_path(@ticket), method: :post do |f| %>
  <div class="form-group">
    <label for="exampleInputEmail1">Subject</label>
    <%= f.text_field :subject, class: "form-control", placeholder: "Subject" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Department</label>
    <%= f.text_field :department, class: "form-control", placeholder: "Department" %>
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Description</label>
    <%= f.text_field :description, class: "form-control", placeholder: "Description" %>
  </div>
  <%= f.submit 'Save', class: "btn btn-primary" %>
<% end%>